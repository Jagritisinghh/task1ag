const mongoose = require('mongoose');
mongoose.connect('mongodb://127.0.0.1:27017/task1')

const userSchema = mongoose.Schema({
    name: {
        type: String,
    },
    username: {
        type: String,
        unique: true
    },
    email: {
        type: String,
        unique: true
    },
    plan: {
        type: String,
        default: 'Basic'
    },
   
});

module.exports = mongoose.model('User', userSchema);
